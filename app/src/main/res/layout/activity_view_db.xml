<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.bluelab.lifehelper.viewDBActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="352dp"
        android:layout_height="58dp"
        android:weightSum="1">

        <TextView
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/txtV_qStartTime"
            android:layout_weight="0.65"
            android:textSize="20dp"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起"
            android:id="@+id/btn_StartTime"
            android:layout_weight="0.23"
            android:textSize="20dp"
            android:onClick="btnChoseStartTime_Click" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/txtV_qEndTime"
            android:layout_weight="0.65"
            android:textSize="20dp"
            android:textColor="#060505" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="迄"
            android:id="@+id/btn_qEndTime"
            android:layout_weight="0.23"
            android:textSize="20dp"
            android:onClick="btnChoseEndTime_Click" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除目前記錄"
            android:id="@+id/btn_delete"
            android:textSize="20dp"
            android:onClick="btnDelete_Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查詢"
            android:id="@+id/btn_query"
            android:layout_weight="0.47"
            android:textSize="20dp"
            android:onClick="btnQuery_Click" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/innerScroller"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/txtV_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#d42323" />

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="353dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回選單"
            android:id="@+id/btn_back"
            android:textSize="12dp"
            android:onClick="btn_back_Click" />
    </LinearLayout>

</LinearLayout>
